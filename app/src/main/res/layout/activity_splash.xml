<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font-family="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#673AB7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_people_outline_black_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_marginTop="60dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commuwize"
        android:textAlignment="center"
        android:textColor="#aeacac"
        android:textSize="30dp"
        android:fontFamily="@font/lobster_italic"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Built for the community"
        android:textColor="#aeacac"
        android:fontFamily="@font/lobster_italic"
        android:textStyle="italic"
        android:textSize="24sp"/>

    </LinearLayout>





</LinearLayout>